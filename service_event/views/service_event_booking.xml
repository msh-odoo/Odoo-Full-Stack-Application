<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_service_booking_event_tree" model="ir.ui.view">
        <field name="name">service.event.booking.tree</field>
        <field name="model">service.event.booking</field>
        <field name="arch" type="xml">
            <list decoration-success="state == 'approved'" decoration-muted="state == 'rejected'">
                <field name="name"/>
                <field name="partner_id"/>
                <field name="service_id"/>
                <field name="quantity"/>
                <field name="tag_id"/>
                <field name="booking_date"/>
            </list>
        </field>
    </record>

    <record id="view_service_booking_event_form" model="ir.ui.view">
        <field name="name">service.event.booking.form</field>
        <field name="model">service.event.booking</field>
        <field name="arch" type="xml">
            <form string="Service Event Booking">
                <header>
                    <button name="action_approve" string="Approve" type="object" class="btn-primary" invisible="state == 'approved'"/>
                    <button name="action_reject" string="Reject" type="object" invisible="state == 'rejected'"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1><field name="name"/></h1>
                    </div>
                    <group name="service_event_details">
                        <group>
                            <field name="service_id"/>
                            <field name="partner_id"/>
                            <field name="quantity"/>
                            <field name="tag_id"/>
                        </group>
                        <group>
                            <field name="booking_date"/>
                            <field name="amount"/>
                            <field name="active"/>
                            <field name="company_id"/>
                        </group>
                    </group>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>
    <record id="service_event_bookings_action" model="ir.actions.act_window">
        <field name="name">Service Event Bookings</field>
        <field name="res_model">service.event.booking</field>
    </record>
</odoo>
