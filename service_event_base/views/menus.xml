<?xml version="1.0" encoding="utf-8"?>
<!--
Menu Definitions

PURPOSE:
    Define application menu structure and navigation.

ODOO MENU HIERARCHY:
    1. Root menu (app icon in home screen)
    2. Main menu items (top menu bar)
    3. Sub-menu items (dropdown)

MENU ATTRIBUTES:
    - name: Display text
    - parent_id: Parent menu (creates hierarchy)
    - action: Action to execute when clicked
    - sequence: Display order
    - groups_id: Access control (which groups can see)

COMMIT 2 SCOPE:
    Basic menu structure for testing. Will be enhanced in Commit 6.
-->
<odoo>
    <data>

        <!-- Root Menu (App) -->
        <menuitem id="menu_service_event_root"
                  name="Service Events"
                  sequence="10"
                  groups="service_event_base.group_service_event_user"
                  web_icon="service_event_base,static/description/icon.png"/>

        <!-- Main Menus -->
        <menuitem id="menu_service_event_main"
                  name="Events"
                  parent="menu_service_event_root"
                  sequence="10"/>

        <menuitem id="menu_service_booking_main"
                  name="Bookings"
                  parent="menu_service_event_root"
                  sequence="20"/>

        <menuitem id="menu_service_configuration"
                  name="Configuration"
                  parent="menu_service_event_root"
                  groups="service_event_base.group_service_event_manager"
                  sequence="100"/>

        <!-- Event Submenus -->
        <menuitem id="menu_service_event_all"
                  name="All Events"
                  parent="menu_service_event_main"
                  action="action_service_event"
                  sequence="10"/>

        <!-- Booking Submenus -->
        <menuitem id="menu_service_booking_all"
                  name="All Bookings"
                  parent="menu_service_booking_main"
                  action="action_service_booking"
                  sequence="10"/>

    </data>
</odoo>

