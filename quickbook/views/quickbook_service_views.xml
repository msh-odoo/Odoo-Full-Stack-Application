<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="quickbook_service_action" model="ir.actions.act_window">
        <field name="name">Service</field>
        <field name="res_model">quickbook.service</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Search View -->
    <record id="quickbook_service_search_view" model="ir.ui.view">
        <field name="name">quickbook.service.search.view</field>
        <field name="model">quickbook.service</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" />
                <field name="company_id" />
                <filter name="active" string="Active" domain="[('active','=',True)]" />
                <group>
                    <filter name="category_id" string="Category"
                        context="{'group_by':'category_id' }" />
                </group>
            </search>
        </field>
    </record>

    <!-- List View -->
    <record id="quickbook_service_list_view" model="ir.ui.view">
        <field name="name">quickbook.service.list.view</field>
        <field name="model">quickbook.service</field>
        <field name="arch" type="xml">
            <list string="Services">
                <field name="name" />
                <field name="category_id" />
                <field name="price" />
                <field name="capacity" />
                <field name="duration" />
                <field name="tag_ids" widget="many2many_tags" />
                <field name="active" widget="boolean_toggle" />
                <field name="company_id" />
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="quickbook_service_form_view" model="ir.ui.view">
        <field name="name">quickbook.service.form.view</field>
        <field name="model">quickbook.service</field>
        <field name="arch" type="xml">
            <form>
                <div class="oe_title">
                    <h1>
                        <field name="name" />
                    </h1>
                </div>
                <group>
                    <group string="Service Information">
                        <field name="category_id" />
                        <field name="tag_ids" widget="many2many_tags" />
                        <field name="active" />
                    </group>
                    <group string="Pricing and Capacity">
                        <field name="price" />
                        <field name="capacity" />
                        <field name="duration" />
                        <field name="company_id" groups="base.group_multi_company" />
                    </group>
                </group>
                <group string="Description">
                    <field name="description" nolabel="1" />
                </group>
                <notebook>
                    <page string="Bookings">
                        <field name="booking_ids" readonly="1" widget="one2many_list">
                            <list>
                                <field name="name" />
                                <field name="partner_id" />
                                <field name="booking_date" />
                                <field name="state" />
                                <field name="amount" />
                            </list>
                        </field>
                    </page>
                </notebook>
            </form>
        </field>
    </record>
</odoo>
