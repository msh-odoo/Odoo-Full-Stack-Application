<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="quickbook_category_action" model="ir.actions.act_window">
        <field name="name">Category</field>
        <field name="res_model">quickbook.category</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Search View -->
    <record id="quickbook_category_search_view" model="ir.ui.view">
        <field name="name">quickbook.category.search.view</field>
        <field name="model">quickbook.category</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" />
            </search>
        </field>
    </record>

    <!-- List View -->
    <record id="quickbook_category_list_view" model="ir.ui.view">
        <field name="name">quickbook.category.list.view</field>
        <field name="model">quickbook.category</field>
        <field name="arch" type="xml">
            <list string="Category">
                <field name="name" />
                <field name="description" />
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="quickbook_category_form_view" model="ir.ui.view">
        <field name="name">quickbook.category.form.view</field>
        <field name="model">quickbook.category</field>
        <field name="arch" type="xml">
            <form>
                <div class="oe_title">
                    <h1>
                        <field name="name" />
                    </h1>
                </div>
                <group>
                    <field name="description" label="Description" />
                </group>
            </form>
        </field>
    </record>
</odoo>
