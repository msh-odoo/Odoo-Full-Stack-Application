<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="event_service_action" model="ir.actions.act_window">
        <field name="name">Event Service</field>
        <field name="res_model">event.service</field>
        <field name="view_mode">list</field>
    </record>

    <record id="event_service_action_view_list" model="ir.ui.view">
        <field name="name">Event Service</field>
        <field name="model">event.service</field>
        <field name="arch" type="xml">
            <list string="Events">
                <field name="name" />
                <field name="description" />
                <field name="price" />
                <field name="active" />
                <field name="category_id" />
                <field name="tag_ids" />
                <field name="company_id" />
            </list>
        </field>
    </record>
</odoo>
