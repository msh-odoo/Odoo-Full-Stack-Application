<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="event_service_registration_action" model="ir.actions.act_window">
        <field name="name">Event Service Registration</field>
        <field name="res_model">event.service.registration</field>
        <field name="view_mode">list</field>
    </record>

    <record id="event_service_registration_view_list" model="ir.ui.view">
        <field name="name">Event Service Registration</field>
        <field name="model">event.service.registration</field>
        <field name="arch" type="xml">
            <list string="Events Registration">
                <field name="name" />
                <field name="quantity" />
                <field name="amount" />
                <field name="booking_date" />
                <field name="partner_id" />
                <field name="state" />
            </list>
        </field>
    </record>

    <record id="event_service_registration_view_form" model="ir.ui.view">
        <field name="name">Event Service Registration</field>
        <field name="model">event.service.registration</field>
        <field name="arch" type="xml">
            <form>
            <group>
                <div class="oe_title">
                    <h1>
                        <field name="name" readonly="1"/>
                    </h1>
                </div>
                <group>
                    <field name="service_id" />
                    <field name="quantity" />
                    <field name="amount" />
                </group>
                <group>
                    <field name="booking_date" />
                    <field name="partner_id" />
                    <field name="state" />
                </group>
            </group>
            </form>
        </field>
    </record>
</odoo>
