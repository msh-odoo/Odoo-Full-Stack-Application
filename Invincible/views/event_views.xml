<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <record id="event_action" model="ir.actions.act_window">
        <field name="name">Events</field>
        <field name="res_model">invincible.event</field>
        <field name="view_mode">list</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No data yet!
            </p>
            <p>
                Start scheduling activities on your opportunities
            </p>
        </field>
    </record>

    <record id="event_view_tree" model="ir.ui.view">
        <field name="name">event.view.tree</field>
        <field name="model">invincible.event</field>
        <field name="arch" type="xml">
            <list sample="1">
                <field name="name" />
                <field name="description" />
                <field name="price" />
                <field name="active" />
                <field name="category_id" />
                <field name="tag_ids" />
                <field name="booking_ids" />
            </list>
        </field>
    </record>

</odoo>
