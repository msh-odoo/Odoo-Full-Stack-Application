<odoo>
    <record id="menu_invincible_home" model="website.menu">
        <field name="name">Programs</field>
        <field name="url">/ngo/programs</field>
        <field name="parent_id" ref="website.main_menu"/>
    </record>

    <record id="menu_invincible_events" model="website.menu">
        <field name="name">Events</field>
        <field name="url">/ngo/events</field>
        <field name="parent_id" ref="website.main_menu"/>
    </record>

    <template id="ngo_program_list" name="NGO Programs">
        <t t-call="website.layout">
            <div class="container py-5">

                <h2 class="border-bottom mb-4">
                    Empowering Lives Through Education Values
                </h2>

                <!-- Program Cards -->
                <div class="row g-4">
                    <t t-foreach="programs" t-as="program">
                        <div class="col-md-4">
                            <a t-attf-href="/ngo/program/#{program.id}"
                               class="text-decoration-none text-dark">
                                <div class="card shadow-sm h-100">
                                    <img t-att-src="image_data_uri(program.image)"
                                         class="card-img-top"
                                         style="height:220px; object-fit:cover"/>
                                    <div class="card-body">
                                        <h5 class="card-title">
                                            <t t-esc="program.name"/>
                                        </h5>
                                        <p class="card-text text-muted">
                                            <t t-esc="program.short_description"/>
                                        </p>
                                    </div>
                                </div>
                            </a>
                        </div>
                    </t>
                </div>

                <!-- Pager -->
                <t t-if="pager">
                    <div class="d-flex justify-content-center mt-4">
                        <t t-call="website.pager"/>
                    </div>
                </t>

            </div>
        </t>
    </template>

    <template id="ngo_program_detail" name="Program Detail">
        <t t-call="website.layout">
            <div class="container py-5">

                <a href="/ngo/programs" class="text-decoration-none">
                    ‚Üê Back to Programs
                </a>

                <div class="row mt-4">
                    <div class="col-md-6">
                        <img t-att-src="image_data_uri(program.image)"
                             class="img-fluid rounded shadow"/>
                    </div>

                    <div class="col-md-6">
                        <h2>
                            <t t-esc="program.name"/>
                        </h2>
                        <p class="text-muted">
                            <t t-esc="program.description"/>
                        </p>

                        <div class="mt-4">
                            <strong>Category:</strong>
                            <t t-esc="program.category_id.name"/>
                        </div>

                        <div class="mt-3">
                            <strong>Status:</strong>
                            <t t-esc="program.state"/>
                        </div>

                        <div class="mt-4">
                            <a class="btn btn-success"
                               t-attf-href="/ngo/donate/#{program.id}">
                                Support This Program
                            </a>
                        </div>
                    </div>
                </div>

            </div>
        </t>
    </template>

