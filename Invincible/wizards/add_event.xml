<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="event_booking_wizard_view_form" model="ir.ui.view">
        <field name="name">invincible.event.booking.wizard.form</field>
        <field name="model">invincible.event.booking.wizard</field>
        <field name="arch" type="xml">
            <form string="Book Event">
                <sheet>
                    <group>
                        <field name="partner_id" placeholder="Select participant"/>
                        <field name="participants"/>
                        <field name="booking_date"/>
                    </group>
                </sheet>
                <footer>
                    <button
                        name="action_create_booking"
                        type="object"
                        string="Confirm Booking"
                        class="btn btn-primary"
                        data-hotkey="q"
                    />
                    <button
                        special="cancel"
                        string="Discard"
                        class="btn btn-secondary"
                        data-hotkey="x"
                    />
                </footer>
            </form>
        </field>
    </record>

</odoo>
